{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES6",                 // Use ES6 for modern JavaScript features
    "module": "CommonJS",             // Use CommonJS for Node.js compatibility
    "rootDir": "./src",               // Source code directory
    "outDir": "./dist",               // Output directory for compiled files
    "strict": true,                   // Enable strict type checking
    "esModuleInterop": true,          // Allow interoperability between CommonJS and ES modules
    "forceConsistentCasingInFileNames": true, // Ensure consistent import casing
    "skipLibCheck": true,             // Skip checking of .d.ts files
    "resolveJsonModule": true         // Enable importing JSON files
  },
  "include": ["src"],                 // Include all TypeScript files in `src/`
  "exclude": ["node_modules", "dist"] // Exclude compiled and external files
}
